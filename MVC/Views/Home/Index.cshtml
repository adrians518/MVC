@{
    ViewData["Title"] = "Tags";
}
<h1>@ViewData["Title"]</h1>

<div class="row">
    <table class="table table-striped table-bordered" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th class="th-sm">
                    Name
                </th>
                <th class="th-sm">
                    Count
                </th>
                <th class="th-sm">
                    Popularity
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var tag in Model)
            {
                <tr>
                    <td>@tag.Name</td>
                    <td>@tag.Count</td>
                    <td>@String.Format("{0:0.00}", tag.Popularity)%</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="row">
    <div class="col-sm-12 col-md-7">
        <div class="dataTables_paginate paging_simple_numbers">
            <ul class="pagination">
                <li class="paginate_button page-item previous"><a href="?page=@ViewBag.PreviousPage" data-dt-idx="@ViewBag.PreviousPage" tabindex="0" class="page-link">Previous</a></li>
                @for (int i = 1; i <= ViewBag.MaxPage; i++)
                {
                    string active = ViewBag.Page == i ? "active" : "";
                    <li class="paginate_button page-item @active"><a href="?page=@i" data-dt-idx="@i" tabindex="0" class="page-link">@i</a></li>
                }

                <li class="paginate_button page-item next"><a href="?page=@ViewBag.NextPage" data-dt-idx="@ViewBag.NextPage" tabindex="0" class="page-link">Next</a></li>
            </ul>
        </div>
    </div>
</div>